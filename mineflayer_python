      goto(2121132,72,285585)
      time.sleep(5)
  except:
    time.sleep(10)
    while True: 
      goto(2121132,72,285585)
      time.sleep(5)

      goto(2121110,72,285585)
      time.sleep(5)

      goto(2121110,72,285606)
      time.sleep(5)

